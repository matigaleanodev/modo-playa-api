PORT=3000
MONGO_URI=mongodb://127.0.0.1:27017/modo-playa

SECRET_KEY=your_secret_key
BCRYPT_ROUNDS=12
SUPERADMIN_ID=

RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=no-reply@example.com

CORS_ORIGIN=http://localhost:4200

# Cloudflare R2 (S3 compatible)
R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
R2_BUCKET=modo-playa-media
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_REGION=auto
R2_SIGNED_URL_EXPIRES_SECONDS=600
MEDIA_PUBLIC_BASE_URL=https://media.example.com

# Image validation / processing
IMAGE_ALLOWED_MIME=image/jpeg,image/png,image/webp
PENDING_UPLOAD_TTL_SECONDS=1800

# Lodgings images
LODGING_IMAGE_MAX_BYTES=10485760
LODGING_IMAGE_MAX_WIDTH=2560
LODGING_IMAGE_MAX_HEIGHT=2560

# User profile image
USER_PROFILE_IMAGE_MAX_BYTES=5242880
USER_PROFILE_IMAGE_MAX_WIDTH=1024
USER_PROFILE_IMAGE_MAX_HEIGHT=1024

