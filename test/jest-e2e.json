{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@contacts/(.*)$": "<rootDir>/src/contacts/$1",
    "^@lodgings/(.*)$": "<rootDir>/src/lodgings/$1",
    "^@auth/(.*)$": "<rootDir>/src/auth/$1",
    "^@users/(.*)$": "<rootDir>/src/users/$1"
  }
}
